@model B76711_B72933_ESPIC.Models.CitasModel

@{
    ViewData["Title"] = "actualizar";
    Layout = "_LayoutCitas";
}


<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-8 p-5">
            <h1>Actualizar Cita</h1>
            <form asp-action="actualizar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <input asp-for="cedula" class="form-control" placeholder="Cedula" readonly hidden />
                    <span asp-validation-for="cedula" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="paciente.cedula" class="form-control" placeholder="Cedula" readonly />
                    <span asp-validation-for="paciente.cedula" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="centro" class="form-control" placeholder="Centro Salud" required readonly />
                    <span asp-validation-for="centro" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="especialidad" class="form-control" placeholder="Especialidad" required readonly />
                    <span asp-validation-for="especialidad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <textarea class="form-control" asp-for="detalle" placeholder="Detalle" rows="4" style="resize: none;"></textarea>
                    <span asp-validation-for="detalle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="fecha" class="control-label">Fecha de la cita</label>
                    <input asp-for="fecha" class="form-control" placeholder="Fecha cita" required />
                    <span asp-validation-for="fecha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Actualizar" class="btn btn-primary" />
                </div>
            </form>
            <div>
                <a asp-action="lista">Regresar</a>
            </div>
        </div>
    </div>
</div>
