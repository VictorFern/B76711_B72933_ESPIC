<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - B76711_B72933_ESPIC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstraps.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrapssss.css" />
    <link rel="stylesheet" href="~/css/sites.css" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-info">
            <a class="navbar-brand" asp-controller="Medico" asp-action="Index">

            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsingNavbarXs">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="collapsingNavbarXs">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Medico" asp-action="Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Citas" asp-action="Index">Citas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Vacunas" asp-action="Index">Vacunas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Alergia" asp-action="Index">Alergias</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Medico" asp-action="LogOut">Cerrar Sesion</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="font-small border-top footer text-muted">

        <div class="container-fluid text-center p-3" id="p">
            <p>Jasson Rojas Madriz - B76711</p>
            <p>Victor Fernández Núñez - B72933</p>
            <p>ESPIC</p>
            <p>Página con fines educativo</p>
        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
